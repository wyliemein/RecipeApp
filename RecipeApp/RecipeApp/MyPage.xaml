<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RecipeApp.MyPage">
    <ContentPage.Content>
        <StackLayout Spacing="30" Padding="30"
                 VerticalOptions="Center">
        <!-- Place new controls here -->
         <Label Text="Sign Up"
               HorizontalOptions="Center"
               FontAttributes="Bold" 
               TextColor="Green"/>
        <Entry Placeholder="Create Username" Text="{Binding Username}" />
        <Entry Placeholder="Enter Password" Text="{Binding Password}" 
               IsPassword="true"/>
        <Entry Placeholder="Re-enter Password" Text="{Binding Password}" 
               IsPassword="true"/>
        <Button Text="SignUp" TextColor="Green"
                BackgroundColor="Gray"
                Command="{Binding SignUpCommands}" />
        <Button Text="Already Have an Account? Log In!" TextColor="Green"
                Command="{Binding GoToLoginCommands}" />
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
