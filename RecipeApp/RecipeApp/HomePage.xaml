<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="RecipeApp.HomePage" NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing = "10">
            <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
                <Button x:Name="singOut" Text="Sign Out" HorizontalOptions="Start" 
                        Clicked="signOut_OnClicked"/>
                <Button x:Name="infoButton" Text="Info" HorizontalOptions="EndAndExpand" 
                        Clicked="infoButton_OnClicked"/>
            </StackLayout>
            <Label Text="Welcome to Recipe App" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Button x:Name="goToSearch" Text="Find a Recipe"
                    TextColor="Green" BackgroundColor="Silver"
                    Clicked="goToSearch_OnClicked" />
            <Entry x:Name="recipeUrl" Placeholder="Recipe URL" IsVisible="false"/>
            <Entry x:Name="recipeName" Placeholder="Name" IsVisible="false"/>
            <Entry x:Name="recipeIngredients" Placeholder="Ingredients" IsVisible="false"/>
            <Button x:Name="addRecipe" Text="Add Recipe"
                    TextColor="Green" BackgroundColor="Silver"
                    Clicked="addRecipe_OnClicked" IsVisible="false"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
