<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.LoginPage" NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10"
                 VerticalOptions="Center">
        <!-- Place new controls here -->
         <Label Text="Pick An Ingredient"
               HorizontalOptions="Center"
               FontAttributes="Bold" 
               TextColor="Green"/>
        <Entry Placeholder="Email" x:Name="email" Text="{Binding Email}" />
        <Entry Placeholder="Password" x:Name="password" Text="{Binding Password}" 
               IsPassword="true"/>
        <Button Text="Login" TextColor="Green"
                BackgroundColor="Silver"
                Clicked="Login_OnClicked" />
        <Button Text="Sign Up" TextColor="Green"
                Clicked="SignUpPage_OnClicked" />
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
